{
    "manifest_version": 3,
    "name": "AI summary",
    "description": "A Chrome extension that summarizes web pages using AI.",
    "version": "1.0",
    "permissions": [
        "activeTab", 
        "scripting", 
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "bot1.png"
    }, 
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ], 
    "background": {
        "service_worker": "background.js"
    }, 
    "options_page": "options.html", 
    "host_permissions": [
        "<all_urls>"
    ]
}